<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <servlet>
    <servlet-name>processServlet</servlet-name>
    <servlet-class>etu1864.framework.servlet.FrontServlet</servlet-class>
    <init-param>
      <param-name>package_to_scan</param-name>
      <param-value>/opt/tomcat/apache-tomcat-10.0.27/webapps/TEST_FRAMEWORK/WEB-INF/classes/</param-value>
      <description>scan package here</description>
  </init-param>
  </servlet>


  <servlet-mapping>
    <servlet-name>processServlet</servlet-name>
      <url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>
